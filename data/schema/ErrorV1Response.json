{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "string"
    },
    "error": {
      "type": "string"
    },
    "errors": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "status": {
      "type": "integer"
    },
    "exception": {
      "type": "string"
    },
    "timestamp": {
      "type": "integer"
    },
    "path": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "error",
    "status",
    "exception",
    "timestamp",
    "path"
  ]
}
